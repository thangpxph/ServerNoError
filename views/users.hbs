<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Quản lý người dùng</h3>
            <table class="table  table-striped table-bordered" id="sortTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên người dùng</th>
                        <th>Phone</th>
                        <th>Đơn hàng đã đặt</th>
                    </tr>
                </thead>
                <tbody id="userbd">
                    {{#each userList}}
                    <tr>
                        <td>{{noNum}}</td>
                        <td>{{fullname}}</td>
                        <td>{{phone}}</td>
                        <td>
                            <a href="/admin/bookByIdUser/{{_id}}" type="button" name="showBtn" class="showBtn btn btn-primary"
                               data-id={{_id}}
                               class="btn btn-primary">Chi tiết
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $('#sortTable').DataTable();
</script>