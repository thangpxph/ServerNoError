<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Quản lý đơn đặt hàng</h3>
            <!-- Button trigger modal -->
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th style="width: 10%">#</th>
                    <th style="width: 15%">Tên Khách hàng</th>
                    <th style="width: 15%">Số điện thoại</th>
                    <th style="width: 10%">Số người</th>
                    <th style="width: 13%">Khung giờ</th>
                    <th style="width: 10%">Món ăn</th>
                    <th style="width: 12%">Hành động</th>
                    <th style="width: 15%">Hành động</th>
                </tr>
                </thead>
            <tbody id="tbody">
                {{#each bookList}}
                <tr>
                    <td>{{noNum}}</td>
                    <td>{{user.fullname}}</td>
                    <td>{{user.phone}}</td>
                    <td>{{people}}</td>
                    <td>{{time}}</td>
                    <td>
                        <a href="/admin/bookByIdWeb/{{_id}}" type="button" name="showBtn" class="showBtn btn btn-primary"
                                data-id={{_id}}
                                class="btn btn-primary">Chi tiết
                        </a>
                    </td>

                    <td>
                        <button type="button" name="deleteBtn" class="deleteBtn btn btn-danger" data-id={{_id}}
                                class="btn btn-danger">Hủy
                        </button>
                    </td>
                    <td>
                        <button type="button" name="submitBtn" class="submitBtn btn btn-primary" data-id={{_id}}
                                class="btn btn-primary">Hoàn thành
                        </button>
                    </td>

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="deleteId" tabindex="-1" role="dialog" aria-labelledby="deleteTitleId"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form action="/admin/book/delete" method="post">
                <input type="hidden" name="bookIdDel" id="bookIdDel">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="headingDel">Hủy đơn hàng</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h6>Bạn muốn hủy đơn hàng này</h6>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                        <button type="submit" id="submitBtn" class="btn btn-primary">Xóa</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal fade" id="submitId" tabindex="-1" role="dialog" aria-labelledby="submitTitleId"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form action="/admin/book/submit" method="post">
                <input type="hidden" name="bookIdSubmit" id="bookIdSubmit">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="headingDel">Hoàn thành đơn hàng</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h6>Bạn muốn hoàn thành đơn hàng này</h6>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                        <button type="submit" id="submitBtn" class="btn btn-primary">Hoàn thành</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function delEvent() {
        document.querySelectorAll('.deleteBtn').forEach(item => {
            item.addEventListener('click', e => {
                let pid = e.target.dataset.id;
                document.querySelector('#bookIdDel').value = pid;
                $('#deleteId').modal('show')
            })
        })
    }

    delEvent();

    function submitEvent() {
        document.querySelectorAll('.submitBtn').forEach(item => {
            item.addEventListener('click', e => {
                let pid = e.target.dataset.id;
                document.querySelector('#bookIdSubmit').value = pid;
                $('#submitId').modal('show')
            })
        })
    }

    submitEvent();
</script>

