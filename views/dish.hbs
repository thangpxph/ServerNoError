<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Quản lý món ăn</h3>
            <!-- Button trigger modal -->
            <button type="button" id="addBtn" class="btn btn-primary" data-toggle="modal" data-target="#modelId">
                Thêm món ăn
            </button>

            <div class="form-group">
                <label for="category2">Lọc món ăn</label>
                <select class="form-control" name="category2" id="category2">
                    {{#each categorys}}
                        <option value="{{_id}}">{{nameCategory}}</option>
                    {{/each}}
                </select>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Hình ảnh</th>
                    <th>Tên món ăn</th>
                    <th>Thể loại</th>
                    <th>Giá tiền</th>
                    <th>Thời gian làm</th>
                    <th>Thành phần</th>
                    <th>Hành động</th>
                    <th>Hành động</th>
                </tr>
                </thead>
                <tbody id="tbody">
                {{#each dishList}}
                    <tr>
                        <td>{{noNum}}</td>
                        <td>{{imageDish}}</td>
                        <td>{{nameDish}}</td>
                        <td>{{category.nameCategory}}</td>
                        <td>{{price}}</td>
                        <td>{{time}}</td>
                        <td>{{ingredient}}</td>
                        <td><button type="button" name="editBtn" class="editBtn btn btn-primary" data-id={{_id}}
                                    class="btn btn-primary">Sửa</button></td>
                        <td><button type="button" name="deleteBtn" class="deleteBtn btn btn-danger" data-id={{_id}}
                                    class="btn btn-danger">Xóa</button></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form action="/admin/dish/create" method="post">
                <input type="hidden" name="dishId" id="dishId">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="heading">Thêm món ăn</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="nameDish">Tên món ăn</label>
                            <input type="text" class="form-control" name="nameDish" id="nameDish"
                                   placeholder="Tên món ăn">
                        </div>
                        <div class="form-group">
                            <label for="category">Thể loại</label>
                            <select class="form-control" name="category" id="category">
                                {{#each categorys}}
                                    <option value="{{_id}}">{{nameCategory}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="price">Giá tiền</label>
                            <input type="number" class="form-control" name="price" id="price"
                                   placeholder="Giá tiền">
                        </div>
                        <div class="form-group">
                            <label for="time">Thời gian hoàn thiện</label>
                            <input type="number" class="form-control" name="time" id="time"
                                   placeholder="Giá tiền">
                        </div>
                        <div class="form-group">
                            <label for="ingredient">Thành phần</label>
                            <textarea class="form-control" name="ingredient" id="ingredient" rows="3"></textarea>
                        </div>
                        <div class="btn btn-secondary-success btn-rounded waves-effect btn-sm float-left w-full text-left">
                            <span>Choose file</span>
                            <input type="file" name="imageDish">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                        <button type="submit" id="submitBtn" class="btn btn-primary">Đăng</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    document.querySelector('#addBtn').addEventListener('click', e => {
        document.querySelector('#heading').innerText = "Thêm món ăn";
        document.querySelector('#submitBtn').innerText = "Đăng";
        document.querySelector('#nameDish').value = "";
        document.querySelector('#dishId').value = "";
        document.querySelector('#price').value = "";
        document.querySelector('#imageDish').value = "";
        document.querySelector('#time').value = "";
        document.querySelector('#ingredient').value = "";
        document.querySelector('#categorys').selectedIndex = 0
    })
    function addEvent() {
        document.querySelectorAll('.editBtn').forEach(item => {
            item.addEventListener('click', e => {
                let pid = e.target.dataset.id;
                let category = e.target.dataset.categoryid;
                let pr = e.target.parentNode.parentNode;
                let nameDish = pr.getElementsByTagName('td')[1].innerText;
                let price = pr.getElementsByTagName('td')[3].innerText;
                let time = pr.getElementsByTagName('td')[4].innerText;
                let ingredient = pr.getElementsByTagName('td')[5].innerText;
                document.querySelector('#heading').innerText = "Sửa món ăn";
                document.querySelector('#submitBtn').innerText = "Cập nhật";
                document.querySelector('#nameDish').value = nameDish;
                document.querySelector('#dishId').value = pid;
                document.querySelector('#price').value = price;
                document.querySelector('#time').value = time;
                document.querySelector('#ingredient').value = ingredient;
                document.querySelector('#categorys').value = category;
                $('#modelId').modal('show')
            })
        })
    }
    addEvent();
</script>
